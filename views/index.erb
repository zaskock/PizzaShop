<%@title="Main - PizzaShop"%>

	<div class="row">
<h3 class="text-center">Hello, We're Open!</h3>
</br>
	<%@products.each do |product|%>
<span style="white-space: pre-wrap;" class="col-md-4">
<div class="text-center">
<a href="/product/<%=product.id%>">
<b><%=product.title%></b>
<%=product.description%>
size:		<%=product.size%>''
price:	$<%=product.price%>
</br>
<img height="120" width="180" src="<%=product.path_to_image%>"></img>
</a>
</div>
<div class="text-center">
<button class="btn btn-success" onclick="add_to_cart(<%=product.id%>)">Add to shopping-cart</button>
</div>
</span>
<%end%>
	</div>
</br>
<script type="text/javascript"> <%= (@success && @success.length > 0) ? "clear_cart();" : "" %></script>